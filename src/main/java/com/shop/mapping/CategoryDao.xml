<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.shop.dao.CategoryDao">
    <resultMap id="bigCategory" type="com.shop.model.Category">
        <id column="categoryId" property="categoryid"/>
        <result column="categoryName" property="categoryname"/>
        <result column="createTime" property="createtime"/>
    </resultMap>

    <resultMap id="subCategory" type="com.shop.model.SubCategory">
        <id column="subCategoryId" property="subcategoryid"/>
        <result column="categoryId" property="categoryid"/>
        <result column="subCategoryName" property="subcategoryname"/>
        <result column="subCategoryDesc" property="subcategorydesc"/>
        <result column="createTime" property="createtime"/>
    </resultMap>

    <select id="getBigCategoryById" resultMap="bigCategory">
        SELECT DISTINCT * FROM `category` WHERE `category`.`categoryId`=#{categoryId} LIMIT 0,1
    </select>

    <select id="getAllBigCategory" resultMap="bigCategory">
        SELECT DISTINCT * FROM `category` LIMIT #{offset},#{size}
    </select>

    <select id="getAllSubCategory" resultMap="subCategory">
        SELECT DISTINCT * FROM `subcategory` LIMIT #{offset},#{size}
    </select>

    <select id="getSubCategoryByBigCategoryId" resultMap="subCategory">
        SELECT DISTINCT * FROM `subcategory` WHERE `subcategory`.`categoryId`=#{bigCategoryId}
    </select>
    
    <select id="getSubCategoryBySubCategoryId" resultMap="subCategory">
        SELECT DISTINCT * FROM `subcategory` WHERE `subcategory`.`subCategoryId`=#{subCategoryId} LIMIT 0,1
    </select>
</mapper>